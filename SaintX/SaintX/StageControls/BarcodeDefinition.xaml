<bb:BaseUserControl x:Class="SaintX.StageControls.BarcodeDefinition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bb="clr-namespace:SaintX.Navigation"
             xmlns:wfi = "clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
             xmlns:wf ="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" 
             mc:Ignorable="d" 
             xmlns:src="clr-namespace:SaintX.StageControls"
             xmlns:utility="clr-namespace:SaintX.Utility"
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.Resources>
            <src:BoolColorConverter x:Key="colorConverter"/>
            <utility:ColorConverter x:Key="backgroundColorConverter"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="550*"/>
        </Grid.ColumnDefinitions>
        <GroupBox>
            <Grid Margin="0,0,0,10" IsEnabled="{Binding ElementName=rdbBarcode, Path=IsChecked}">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="1.5*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <StackPanel Name="approach" Grid.Row="0">
                <Label Content="设置方式：" FontSize="16"/>
                <StackPanel Orientation="Horizontal"  Margin="0,10,0,10">
                    <RadioButton  Content="起始-数量" IsChecked="True" x:Name="rdbStartCount" FontSize="16"/>
                    <RadioButton  Content="起始-结束"  x:Name="rdbStartEnd" FontSize="16" Margin="10,0,0,0" />
                </StackPanel>
            </StackPanel>
            <StackPanel Name="approach1"  Grid.Row="1" Background="{Binding ElementName=rdbStartCount,Path=IsChecked,Converter={StaticResource colorConverter}}" Margin="0,10,0,10" IsEnabled="{Binding ElementName=rdbStartCount, Path=IsChecked}">
                <Label Content="起始条码-数量" FontSize="16"/>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="起始条码:"/>
                        <TextBox Name="txtStartBarcodeApproach1" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <Label Content="数量:    "/>
                        <TextBox Name="txtCount" Width="120"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Name="approach2" Grid.Row="2" Background="{Binding ElementName=rdbStartEnd,Path=IsChecked,Converter={StaticResource colorConverter}}" Margin="0,10,0,10" IsEnabled="{Binding ElementName=rdbStartEnd, Path=IsChecked}">
                <Label Content="起始条码-结束条码" FontSize="16"/>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Label Content="起始条码:"/>
                        <TextBox Name="txtStartBarcodeApproach2" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <Label Content="结束条码:"/>
                        <TextBox Name="txtEndBarcode" Width="120"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
                <Grid Grid.Row="3">
                    <StackPanel>
                    <Label Content="实验:"/>
                    <TreeView x:Name="tree"    ItemContainerStyle="{StaticResource TreeViewItemStyle}"
                        ItemsSource="{Binding Mode=OneTime}" ItemTemplate="{StaticResource CheckBoxItemTemplate}"
                        HorizontalAlignment="Left"  VerticalAlignment="Top" Width="180" Margin="5,0,10,0"/>
                </StackPanel>
                
            </Grid>
            <Grid Grid.Row="4">
                <Button Name="btnBarcodeOk" Content="设置" FontSize="16" Margin="0,5,0,5" Width="120" Click="btnBarcodeOk_Click"/>
            </Grid>
        </Grid>
        </GroupBox>
        <GroupBox Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <StackPanel  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <StackPanel.Resources>
                        <utility:WidthConverter x:Key="widthConverter"/>
                        <Style x:Key="mockHeader" TargetType="TextBox">
                            <Setter Property="Width"  Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}, Path=ActualWidth, Converter={StaticResource widthConverter}}"/>
                            <Setter Property="Margin" Value="5,0,0,5"/>
                        </Style>
                        <Style x:Key="TwoLineListViewItem" TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border Name="BD_Collector" CornerRadius="5" BorderBrush="DarkSlateBlue" BorderThickness="2"
                                                Width= "{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}, Path=ActualWidth, Converter={StaticResource widthConverter}}"  
                                                Height="50" Margin="5">
                                            <StackPanel>
                                                <Label Content="{Binding Path=ColorfulAssay.Name}" Background="{Binding Path=ColorfulAssay.Color, Converter={StaticResource backgroundColorConverter}}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="13" />
                                                <Label Content="{Binding Path=Barcode}" Background="Yellow" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="13" />
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="BD_Collector" Property="Background" Value="LightGreen" />
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="BD_Collector" Property="Background" Value="Red" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>
                    <Label Margin="0,4,0,4" FontFamily="SimSun">实验信息：</Label>
                    <!--<wfi:WindowsFormsHost>
                        <wf:DataGridView x:Name="dataGridView" AllowUserToAddRows="False" EditMode="EditProgrammatically"/>
                    </wfi:WindowsFormsHost>-->
                    <TextBox Name="test" Visibility="Collapsed" Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type StackPanel}}, Path=ActualWidth, Converter={StaticResource widthConverter}}"/>
                    <ListView Name="lv_samples" ItemsSource="{Binding Path=SampleInfos.SampleInfoList}" SelectionMode="Multiple" Background="{x:Null}" ItemContainerStyle="{StaticResource TwoLineListViewItem}">
                        <ListView.Template>
                            <ControlTemplate>
                                <Border CornerRadius="10" BorderBrush="RoyalBlue" BorderThickness="1">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Orientation="Horizontal">
                                                <!--<TextBlock Text="{Binding Path= Name1}" FontSize="14" Margin="5"  TextAlignment="Center" Width="{Binding ElementName=test, Path=Width}"/>-->
                                                <TextBlock Text="样品名" FontSize="14" Margin="5" TextAlignment="Center" Width="{Binding ElementName=test, Path=Width}"/>
                                                <TextBlock Text="样品名" FontSize="14" Margin="5" TextAlignment="Center" Width="{Binding ElementName=test, Path=Width}"/>
                                                <TextBlock Text="样品名" FontSize="14" Margin="5" TextAlignment="Center" Width="{Binding ElementName=test, Path=Width}"/>
                                                <TextBlock Text="样品名" FontSize="14" Margin="5" TextAlignment="Center" Width="{Binding ElementName=test, Path=Width}"/>
                                                <TextBlock Text="样品名" FontSize="14" Margin="5" TextAlignment="Center" Width="{Binding ElementName=test, Path=Width}"/>
                                                <TextBlock Text="样品名" FontSize="14" Margin="5" TextAlignment="Center" Width="{Binding ElementName=test, Path=Width}"/>
                                            </StackPanel>
                                            <ItemsPresenter Grid.Row="1" />
                                        </Grid>
                                    </ScrollViewer>
                                </Border>
                            </ControlTemplate>
                        </ListView.Template>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                    </ListView>
                </StackPanel>
                <GroupBox Grid.Row="2" Grid.Column="2" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="1" Grid.Column="0"   HorizontalAlignment="Stretch" Margin="0,0,0,10"  Name="txtInfo" VerticalAlignment="Stretch" MaxLines="4" TabIndex="4" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"  />
                        <Label Content="信息:"  Height="34" HorizontalAlignment="Left" Name="label6" VerticalAlignment="Top" Width="50" Margin="0,0,0,0" />
                        <Button Content="下一步" Grid.Column="1"  Height="36"  VerticalAlignment="Bottom" Margin="20,0,0,10" Name="btnNext" Width="100" HorizontalAlignment="Left" Click="btnNext_Click" IsDefault="True" TabIndex="5" Grid.Row="1"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</bb:BaseUserControl>
